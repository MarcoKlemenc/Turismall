@model Turismall.Models.Destino

@{
    ViewData["Title"] = "Detalle";
}

<div class="center-block">
    <a href="@Url.Content("~/Destinos/" + Model.FotoPortada)">
        <img border="0" alt="Imagen" src="@Url.Content("~/Destinos/" + Model.FotoPortada)" width="100%">
    </a>
</div>
<br />
<div class="well">
    <p>@Html.DisplayFor(model => model.Descripcion)</p>
</div>
<div class="row">
    <div class='col-md-6 @(Model.LugaresDescatados==null?"col-md-offset-3":"")'>
        <div id="fotos" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#fotos" data-slide-to="0" class="active"></li>
                <li data-target="#fotos" data-slide-to="1"></li>
                <li data-target="#fotos" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox" style=" width:100%; height: 300px !important;">
                <div class="item active">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/1.jpg")" alt="First slide">
                </div>
                <div class="item">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/2.jpg")" alt="Second slide">
                </div>
                <div class="item">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/3.jpg")" alt="Third slide">
                </div>
            </div>
            <a class="left carousel-control" href="#fotos" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#fotos" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
    @if (Model.LugaresDescatados != null)
    {
        <div class="col-md-6">
            <p>@Html.DisplayFor(model => model.LugaresDescatados)</p>
        </div>
    }
</div>


