@model Turismall.Models.Destino

@{
    ViewData["Title"] = "Detalle";
}

<div class="center-block">
    <a href="@Url.Content("~/Destinos/" + Model.FotoPortada)">
        <img border="0" alt="Imagen" src="@Url.Content("~/Destinos/" + Model.FotoPortada)" width="100%">
    </a>
</div>
<br />
<div class="well">
    <p>@Html.DisplayFor(model => model.Descripcion)</p>
</div>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#galeria">Galeria</a></li>
    <li><a data-toggle="tab" href="#lugares">Lugares destacados</a></li>
    <li><a data-toggle="tab" href="#pronostico">Pronostico</a></li>
</ul>
<div class="tab-content">
    <div id="galeria" class="tab-pane fade in active">
        <div id="fotos" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#fotos" data-slide-to="0" class="active"></li>
                <li data-target="#fotos" data-slide-to="1"></li>
                <li data-target="#fotos" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox" style="max-height: 500px !important; overflow: hidden; ">
                <div class="item active">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/1.jpg")" alt="Foto">
                </div>
                <div class="item">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/2.jpg")" alt="Foto">
                </div>
                <div class="item">
                    <img class="d-block img-fluid" src="@Url.Content("~/Fotos/" + Model.ID + "/3.jpg")" alt="Foto">
                </div>
            </div>
            <a class="left carousel-control" href="#fotos" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#fotos" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
    <div id="lugares" class="tab-pane fade">
        @if (Model.LugaresDescatados != null)
        {
            <ul class="list-group">
                    @foreach (var lugar in ViewBag.lugares)
                    {
                        <li class="list-group-item">@lugar</li>
                    }
                </ul>
        }
    </div>
    <div id="pronostico" class="tab-pane fade">
        <a href="@Model.LinkPronostico" class="aw-widget-legal">
        </a><div id="awtd1497836852677" class="aw-widget-36hour" data-locationkey="@Model.LugarPronostico" data-unit="c" data-language="es" data-useip="false" data-uid="awtd1497836852677" data-editlocation="true"></div>
        <script type="text/javascript" src="https://oap.accuweather.com/launch.js"></script>
    </div>
</div>
