@model IEnumerable<Turismall.Models.Destino>

@{
    ViewData["Title"] = "Destinos";
}

<div class="btn-group-justified">
    <div>
        <img height="250" class="center-block" src="@Url.Content("~/Destinos.png")" />
    </div>
</div>
<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h4><a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Nombre)</a></h4>
                </td>
            </tr>
        }
    </tbody>
</table>
