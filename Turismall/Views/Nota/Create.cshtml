@model Turismall.Models.Nota

@{
    ViewData["Title"] = "Create";
}

<h2>Crear nota</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Nota</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Texto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Foto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input class="form-control" type="file" name="Foto" accept="image/jpeg" />
            </div>
        </div>
        @Html.HiddenFor(m => m.ViajeID)

        <div class="form-group">
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" /><font face="sans-serif"> Volver</font></a>
            </div>
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" /><font face="sans-serif"> Crear</font></button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
