@model Turismall.Models.Nota

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="ViajeID" />
        <div class="form-group">
            <label asp-for="Texto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Texto" class="form-control"></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <label asp-for="Fecha" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Foto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input class="form-control" type="file" name="Foto" accept="image/jpeg" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Volver", "Index", new { Controller = "Nota", idViaje = Model.ViajeID }, new { @class = "btn btn-default btn-sm" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
