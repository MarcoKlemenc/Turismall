@model Turismall.Models.Viaje

@{
    ViewData["Title"] = "Detalles";
}

<div class="btn-group-justified">
    <div>
        <img height="200" class="img-responsive center-block" src="@Url.Content("~/DetallesDelViaje.png")" />
    </div>
</div>

<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@Html.DisplayFor(model => model.Nombre)</strong>
    </div>
    <div class="panel-body">
        @if (String.IsNullOrEmpty(@Model.Descripcion))
        {
            <p>No hay descripci√≥n.</p>
        }
        else
        {
            <p>@Html.DisplayFor(model => model.Descripcion)</p>
        }
    </div>
</div>

<a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-pencil" /><font face="sans-serif"> Editar</font></a>
<a href="@Url.Action("Index", new { Controller = "Nota", idViaje = Model.ID })" class="btn btn-default"><span class="glyphicon glyphicon-list" /><font face="sans-serif"> Ver notas</font></a>
<a href="@Url.Action("Create", new { Controller = "Nota", idViaje = Model.ID })" class="btn btn-default"><span class="glyphicon glyphicon-plus" /><font face="sans-serif"> Agregar nota</font></a>
