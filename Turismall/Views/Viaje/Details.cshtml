@model Turismall.Models.Viaje

@{
    ViewData["Title"] = "Detalles";
}

@if (User.Identity.IsAuthenticated)
{
    <img height="200" class="center-block" src="@Url.Content("~/DetallesDelViaje.png")" />
    <br/>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd>
                @if (String.IsNullOrEmpty(@Model.Descripcion))
                {
                    <p>No hay descripci√≥n.</p>
                }
                else
                {
                    @Html.DisplayFor(model => model.Descripcion)
                }
                @Html.ActionLink("Ver notas", "Index", new { Controller = "Nota", idViaje = Model.ID }, new { @class = "btn btn-default btn-sm pull-right" })
                @Html.ActionLink("Crear nota", "Create", new { Controller = "Nota", idViaje = Model.ID }, new { @class = "btn btn-default btn-sm pull-right" })
            </dd>

        </dl>
    </div>
    <div class="col-md-2">
        <a asp-action="Index" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" /><font face="sans-serif"> Volver</font></a>
    </div>
    <div class="col-md-10">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-pencil" /><font face="sans-serif"> Editar</font></a>
    </div>
}
else
{
    <h2>Acceso denegado</h2>
    <h4>Para utilizar esta funcionalidad, debe ingresar primero.</h4>
}

