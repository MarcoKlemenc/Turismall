@model Turismall.Models.Viaje

@{
    ViewData["Title"] = "Note";
}

<h2>Notas</h2>

<form asp-action="Note">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nota" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

<div class="form-group">
    <div class="col-md-2">
        <a asp-action="Index" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left" /><font face="sans-serif"> Volver </font></a>
    </div>
    <div class="col-md-10">
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" /><font face="sans-serif"> Guardar</font></button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

