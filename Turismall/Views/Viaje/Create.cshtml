@model Turismall.Models.Viaje

@{
    ViewData["Title"] = "Crear viaje";
}

<div class="btn-group-justified">
    <div class="col-md-11">
        <h2>Crear viaje</h2>
    </div>
    <div class="col-md-1">
        <h3><a asp-action="Index" class="btn btn-default"><span class="glyphicon glyphicon-remove" /><font face="sans-serif"></font></a></h3>
    </div>
</div>

<br/>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-12">
                <b><input asp-for="Nombre" class="form-control" /></b>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input asp-for="Descripcion" class="form-control" placeholder="Ingresá una descripción" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok" /><font face="sans-serif"> Crear</font></button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
