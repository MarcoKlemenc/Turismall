@model Turismall.Models.Viaje

@{
    ViewData["Title"] = "Editar";
}

<div class="btn-group-justified">
    <h2>
        Editar viaje
        <a asp-action="index" class="btn btn-default" style="float:right"><span class="glyphicon glyphicon-remove" /><font face="sans-serif"></font></a>
    </h2>
</div>

<br />

<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="Usuario" />
        <input type="hidden" asp-for="FechaInicio" />
        <input type="hidden" asp-for="FechaFin" />
        <div class="form-group">
            <div class="col-md-12">
                <b><input asp-for="Nombre" class="form-control" /></b>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary" onclick="javascript:$('#saving').show();"><span class="glyphicon glyphicon-floppy-disk" /><font face="sans-serif"> Guardar</font></button>
                <div id="saving" style="display:none;">Guardando...</div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
