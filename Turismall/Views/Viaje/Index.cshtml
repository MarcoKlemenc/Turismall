@model IEnumerable<Turismall.Models.Viaje>
@using System.Linq

@{
    ViewData["Title"] = "Index";
}

<img height="200" class="center-block" src="@Url.Content("~/ListaViajes.png")" />
<br />
<div style="text-align:center"><a asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus" /><font face="sans-serif"> Agregar</font></a></div>
<br />

<table class="table table-hover">
    @if (!Model.Any())
    {
        <tr><td><h4>No se han creado viajes.</h4></td></tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-10">

                @if (item.FechaInicio.Year != 1)
                {
                    <small>
                        @Html.DisplayFor(modelItem => item.FechaInicio) - @Html.DisplayFor(modelItem => item.FechaFin)
                    </small>
                }
                else
                {
                    <small title="Debe agregar una nota para definir las fechas del viaje">Sin fechas</small>
                }

                <h4>@Html.DisplayFor(modelItem => item.Nombre)</h4>
                @if (String.IsNullOrEmpty(item.Descripcion))
                {
                    <h5>No hay descripcion.</h5>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Descripcion)
                }

            </td>
            <td class="col-md-2" style="text-align: right">
                <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.ID"><span class="glyphicon glyphicon-pencil" /></a>
                <a asp-action="Details" class="btn btn-default" asp-route-id="@item.ID"><span class="glyphicon glyphicon-file" /></a>
                <a href="@Url.Action("Index", new { Controller = "Nota", idViaje = item.ID })" class="btn btn-default"><span class="glyphicon glyphicon-bookmark" /></a>
            </td>
        </tr>
    }
</table>
